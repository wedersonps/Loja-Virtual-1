
@model LojaVirtualCleiton.Models.CategoriaViewModel
@{ 
    ViewBag.Title = Model == null || Model.Id == null ? "Nova Categoria" : "Editando Categoria";
}

<h2>@(Model == null || Model.Id == null ? "Nova Categoria" : "Editando Categoria") </h2>

@using (Html.BeginForm("Editar", "Categoria", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar novo categoria</h4>
    <hr />

    @Html.HiddenFor(model => model.Id)

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Salvar" />
        </div>
    </div>
}


